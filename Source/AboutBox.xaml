<Window x:Class="Aurora.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aurora"
        mc:Ignorable="d"
        Title="About Aurora" Height="350" Width="650" ResizeMode="NoResize">
    <Grid>
        <Image Margin="-28,10,424,10" Source="/Assets/about.png"/>
        <Label x:Name="Name" Content="Aurora" HorizontalAlignment="Left" Margin="193,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Version" Content="Unknown Version" HorizontalAlignment="Left" Margin="193,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Company" HorizontalAlignment="Left" Margin="193,72,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" TextDecorations="Underline" Foreground="#FF0078D7" BorderBrush="{x:Null}" Cursor="Hand" MouseDoubleClick="TextBox_MouseDoubleClick"/>
        <RichTextBox x:Name="About" Margin="193,95,10,39"/>
        <Button x:Name="OKButton" Content="OK" Margin="0,0,6,9" Click="OKButton_Click" HorizontalAlignment="Right" Width="100" Height="25" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
